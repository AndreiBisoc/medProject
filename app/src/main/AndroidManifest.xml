<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.medproject">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera2" />
    <uses-feature android:name="android.hardware.camera2.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconita"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconita"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Prototypes -->
        <activity android:name=".NotificationActivity" />
        <activity android:name=".SpeechToText" />
        <activity android:name=".DoctorWorkflow.Profile_details"
            android:windowSoftInputMode="adjustPan"
            tools:ignore="InnerclassSeparator">
        </activity>
        <!-- Administrator -->
        <activity
            android:name=".Administrator.AddDrug"
            tools:ignore="InnerclassSeparator" />

        <!-- Notifications -->
        <receiver
            android:name=".Notifications.ReminderBroadcast"
            tools:ignore="InnerclassSeparator" />
        <receiver
            android:name=".Notifications.TakenActionBroadcast"
            tools:ignore="InnerclassSeparator" />
        <receiver
            android:name=".Notifications.SnoozeActionBroadcast"
            tools:ignore="InnerclassSeparator" />

        <!-- QR Codes -->
        <activity
            android:name=".QRCode.ScanQR"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".QRCode.GenerateQRCode"
            tools:ignore="InnerclassSeparator" />

        <!-- Auth workflow -->
        <activity
            android:name=".auth.LoginActivity"
            android:windowSoftInputMode="stateVisible|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.AddDetailsToPatient" />
        <activity android:name=".auth.RegisterActivity" />
        <activity android:name=".auth.RegisterPacientActivity" />
        <activity android:name=".auth.RegisterDoctorActivity" />

        <!-- Patient workflow -->
        <activity
            android:name=".PatientWorkflow.MyMedications.MyMedications"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".PatientWorkflow.MyDrugs.MyDrugs"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".PatientWorkflow.DrugDetails.DrugDetailsAndAdministration"
            android:windowSoftInputMode="stateVisible|adjustNothing"
            tools:ignore="InnerclassSeparator" />

        <!-- Doctor workflow -->
        <activity
            android:name=".DoctorWorkflow.MyPacients.MyPatientsActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".DoctorWorkflow.MyPacients.PatientDetails"
            tools:ignore="InnerclassSeparator"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".DoctorWorkflow.DoctorDetails"
            tools:ignore="InnerclassSeparator"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".DoctorWorkflow.MyPacients.AddPatientToDoctorActivity"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".DoctorWorkflow.AddMedication.AddMedication"
            tools:ignore="InnerclassSeparator" />
        <activity
            android:name=".DoctorWorkflow.AddMedication.AddDrugToMedication"
            tools:ignore="InnerclassSeparator" />
        <activity android:name=".ListActivity" />
    </application>

</manifest>