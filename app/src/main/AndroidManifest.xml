<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.medproject">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera2" />
    <uses-feature android:name="android.hardware.camera2.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/iconita"
        android:label="@string/app_name"
        android:roundIcon="@drawable/iconita"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar">

        <service android:name=".MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>


        <!-- Set custom default icon. This is used when no icon is set for incoming notification messages.
            See README(https://goo.gl/l4GJaQ) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/fui_ic_github_white_24dp" />
        <!-- Set color used with incoming notification messages. This is used when no color is set for the incoming
             notification message. See README(https://goo.gl/6BKBk7) for more. -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_color"
            android:resource="@color/colorAccent" />


        <!-- Administrator -->
        <activity android:name=".Administrator.AddDrug" /> <!-- QR Codes -->
        <activity android:name=".QRCode.ScanQR" />
        <activity android:name=".QRCode.GenerateQRCode" /> <!-- Auth workflow -->
        <activity android:name=".auth.LoginActivity"
            android:windowSoftInputMode="stateVisible|adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".auth.RegisterActivity" />
        <activity android:name=".auth.RegisterPacientActivity" />
        <activity android:name=".auth.RegisterDoctorActivity">
        </activity>

        <!-- Patient workflow -->
        <activity android:name=".PatientWorkflow.MyMedications.MyMedications" />
        <activity android:name=".PatientWorkflow.MyDrugs.MyDrugs" />
        <activity android:name=".PatientWorkflow.DrugDetails.DrugDetailsAndAdministration"
            android:windowSoftInputMode="stateVisible|adjustNothing"/>

        <!-- Doctor workflow -->
        <activity android:name=".DoctorWorkflow.MyPacients.MyPatientsActivity" />
        <activity android:name=".DoctorWorkflow.MyPacients.PatientDetails" />
        <activity android:name=".DoctorWorkflow.DoctorDetails" />
        <activity android:name=".DoctorWorkflow.MyPacients.AddPatientToDoctorActivity" />
        <activity android:name=".DoctorWorkflow.AddMedication.AddMedication" />
        <activity android:name=".DoctorWorkflow.AddMedication.AddDrugToMedication" />
        <activity android:name=".ListActivity" />
        <activity android:name=".Details" />
    </application>

</manifest>