<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item">


        <ImageView
            android:id="@+id/patientIcon"
            android:layout_width="73dp"
            android:layout_height="102dp"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:src="@drawable/patient"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/patientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/border"
        android:padding="5dp"
        app:layout_constraintEnd_toStartOf="@+id/deleteIcon"
        app:layout_constraintStart_toEndOf="@+id/patientIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/patientDateOfBirth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/border"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/patientIcon"
        app:layout_constraintTop_toBottomOf="@+id/patientPhoneNumber"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/patientPhoneNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:padding="5dp"
        android:background="@drawable/border"
        app:layout_constraintEnd_toStartOf="@+id/seeMore"
        app:layout_constraintStart_toEndOf="@+id/patientIcon"
        app:layout_constraintTop_toBottomOf="@+id/patientName" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deleteIcon"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
        android:layout_width="29dp"
        android:layout_height="31dp"
        android:layout_marginEnd="24dp"
        app:icon="@drawable/ic_delete_black_24dp"
        app:iconTint="@color/amber"
        android:backgroundTint="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/seeMore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seeMore"
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
        android:layout_width="29dp"
        android:layout_height="31dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/white"
        app:icon="@drawable/ic_more_horiz_black_24dp"
        app:iconTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/deleteIcon"
        app:layout_constraintStart_toStartOf="@+id/deleteIcon" />

</androidx.constraintlayout.widget.ConstraintLayout>
