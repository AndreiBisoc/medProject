<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item">

    <ImageView
        android:id="@+id/patientIcon"
        android:layout_width="55dp"
        android:layout_height="83dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:src="@drawable/patient"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/patientName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="5dp"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/icons"
        app:layout_constraintStart_toEndOf="@+id/patientIcon"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toStartOf="@+id/icons"
        app:layout_constraintStart_toEndOf="@+id/patientIcon"
        app:layout_constraintTop_toBottomOf="@+id/patientName">

        <TextView
            android:id="@+id/patientPhoneNumber"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:padding="5dp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/patientDateOfBirth"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/border"
            android:padding="5dp"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/icons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteIcon"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
            android:layout_width="29dp"
            android:layout_height="31dp"
            app:iconGravity="textEnd"
            android:layout_gravity="end|top"
            android:backgroundTint="@color/white"
            app:icon="@drawable/ic_delete_black_24dp"
            app:iconSize="28dp"
            app:iconTint="@color/grey" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/seeMore"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/white"
            android:insetLeft="0dp"
            android:onClick="ShowPopup"
            app:icon="@drawable/ic_more_horiz_black_24dp"
            app:iconGravity="textStart"
            app:iconSize="40dp"
            app:iconTint="#453f3f"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
