<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_item">

    <ImageView
        android:id="@+id/imageDrug"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/text_margin_standard"
        android:layout_marginTop="@dimen/text_margin_standard"
        android:src="@drawable/medicine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drugName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_standard"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/amber"
        android:textSize="@dimen/title_large"
        app:layout_constraintStart_toEndOf="@+id/imageDrug"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drugScop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_margin_standard"
        android:layout_marginTop="8dp"
        android:paddingBottom="8dp"
        android:text="TextView"
        android:textColor="@color/grey"
        app:layout_constraintStart_toEndOf="@+id/imageDrug"
        app:layout_constraintTop_toBottomOf="@+id/drugName" />

    <TextView
        android:id="@+id/drugUnitate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin_standard"
        android:text="TextView"
        android:textColor="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.90"
        app:layout_constraintStart_toEndOf="@+id/drugScop"
        app:layout_constraintTop_toBottomOf="@+id/drugName" />
</androidx.constraintlayout.widget.ConstraintLayout>
